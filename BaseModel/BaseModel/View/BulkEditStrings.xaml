<UserControl x:Class="BaseModel.View.BulkEditStrings" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="100" d:DesignWidth="300" mc:Ignorable="d">
    <dxlc:LayoutControl Orientation="Vertical">
        <dxlc:LayoutGroup Name="LayoutGroupMain" Header="Edit Value" Orientation="Vertical" View="Group">
            <dxlc:LayoutGroup Name="LayoutGroupContent" Height="50" Orientation="Horizontal" View="Group">
                <dxlc:LayoutItem Height="50" Label="{Binding LabelTitle}">
                    <dxe:TextEdit x:Name="txtContent" Text="{Binding EditValue, Mode=TwoWay}" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Name="LayoutGroupButtons" Height="30" HorizontalAlignment="Right" Orientation="Horizontal" View="Group" />
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>