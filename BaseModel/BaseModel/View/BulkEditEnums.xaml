<UserControl
    x:Name="userControl"
    x:Class="BaseModel.View.BulkEditEnums"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    Height="100" Width="300">
    <dxlc:LayoutControl Orientation="Vertical">
        <dxlc:LayoutGroup Name="LayoutGroupMain" View="Group" Header="Edit Value" Orientation="Vertical">
            <dxlc:LayoutGroup Height="40" Name="LayoutGroupContent" View="Group" Orientation="Horizontal">
                <dxlc:LayoutItem Height="25" Label="Value:">
                    <dxe:ComboBoxEdit x:Name="cmbContent" IsTextEditable="False"
                                      DisplayMember="{Binding ComboBoxDisplayMember}"
                                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                      ItemsSource="{Binding SourceObjects}" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Height="25" HorizontalAlignment="Right" Name="LayoutGroupButtons" View="Group"
                              Orientation="Horizontal" />
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>